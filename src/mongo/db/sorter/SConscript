Import("env")

env = env.Clone()

sorterEnv = env.Clone()
sorterEnv.InjectThirdParty(libraries=['snappy'])

sorterEnv.CppUnitTest(
    target='db_sorter_test',
    source=[
        'sorter_test.cpp',
    ],
    LIBDEPS=[
        '$VARIANT_DIR/mongo/db/service_context',
        '$VARIANT_DIR/mongo/db/service_context_test_fixture',
        '$VARIANT_DIR/mongo/db/storage/encryption_hooks',
        '$VARIANT_DIR/mongo/db/storage/storage_options',
        '$VARIANT_DIR/mongo/s/is_mongos',
        '$VARIANT_DIR/third_party/shim_snappy'
    ],
)
