# -*- mode: python -*-

Import("env")

env = env.Clone()

env.Library(
    target='views_mongod',
    source=[
        'durable_view_catalog.cpp',
    ],
    LIBDEPS=[
        '$VARIANT_DIR/mongo/db/dbhelpers',
        '$VARIANT_DIR/mongo/db/views/views',
    ],
    LIBDEPS_PRIVATE=[
        '$VARIANT_DIR/mongo/db/catalog/database_holder',
    ],
)

env.Library(
    target='views',
    source=[
        'view.cpp',
        'view_catalog.cpp',
        'view_graph.cpp',
    ],
    LIBDEPS=[
        'resolved_view',
        '$VARIANT_DIR/mongo/base',
        '$VARIANT_DIR/mongo/db/pipeline/aggregation',
        '$VARIANT_DIR/mongo/db/repl/repl_coordinator_interface',
        '$VARIANT_DIR/mongo/db/query/collation/collator_factory_interface',
    ]
)

env.Library(
    target='resolved_view',
    source=[
        'resolved_view.cpp',
    ],
    LIBDEPS=[
        '$VARIANT_DIR/mongo/base',
    ]
)

env.CppUnitTest(
    target='db_views_test',
    source=[
        'resolved_view_test.cpp',
        'view_catalog_test.cpp',
        'view_definition_test.cpp',
        'view_graph_test.cpp',
    ],
    LIBDEPS=[
        'views',
        '$VARIANT_DIR/mongo/db/auth/authmocks',
        '$VARIANT_DIR/mongo/db/query/collation/collator_interface_mock',
        '$VARIANT_DIR/mongo/db/query/query_test_service_context',
        '$VARIANT_DIR/mongo/db/repl/replmocks',
        '$VARIANT_DIR/mongo/s/is_mongos',
        '$VARIANT_DIR/mongo/unittest/unittest',
    ],
)
